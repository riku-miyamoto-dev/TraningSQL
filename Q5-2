-- 1
UPDATE 回答者
SET 国名 = CASE SUBSTR(TRIM(メールアドレス), LENGTH(TRIM(メールアドレス)) - 2,2)
    WHEN 'jp' THEN 日本
    WHEN 'uk' THEN イギリス
    WHEN 'cn' THEN 中国
    WHEN 'fr' THEN フランス
    WHEN 'vn' THEN ベトナム
END

-- 2
SELECT TRIM(メールアドレス) AS メールアドレス, 属性
    CASE
        WHEN 住居 = 'C' THEN '集合住宅:'
        WHEN 住居 = 'D' THEN '戸建て:'
    END
    CASE
        WHEN 年齢 BETWEEN 20 AND 29 THEN 20代
        WHEN 年齢 BETWEEN 30 AND 39 THEN 30代
        WHEN 年齢 BETWEEN 40 AND 49 THEN 40代
        WHEN 年齢 BETWEEN 50 AND 59 THEN 50代
    END AS 属性
    FROM 回答者
